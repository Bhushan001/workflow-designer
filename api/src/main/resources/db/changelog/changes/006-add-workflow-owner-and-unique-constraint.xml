<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="006-add-workflow-owner-and-unique-constraint" author="workflow-designer">
        <!-- Add owner_id and client_id columns -->
        <addColumn tableName="workflows">
            <column name="owner_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(50)" defaultValue="DRAFT">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Add workflow_definition column as JSON/TEXT -->
        <addColumn tableName="workflows">
            <column name="workflow_definition" type="TEXT"/>
        </addColumn>

        <!-- Create unique constraint on (name, owner_id) -->
        <createIndex indexName="idx_workflows_name_owner" tableName="workflows" unique="true">
            <column name="name"/>
            <column name="owner_id"/>
        </createIndex>

        <!-- Add indexes for better query performance -->
        <createIndex indexName="idx_workflows_owner_id" tableName="workflows">
            <column name="owner_id"/>
        </createIndex>

        <createIndex indexName="idx_workflows_client_id" tableName="workflows">
            <column name="client_id"/>
        </createIndex>

        <createIndex indexName="idx_workflows_status" tableName="workflows">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
